<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_invoice_depreciation" model="ir.ui.view">
            <field name="name">account.invoice.depreciation.form</field>
            <field name="model">account.invoice.depreciation</field>
            <field name="arch" type="xml">
                <form string="Depreciation Note">
                    <group>
                         <group>
                             <field name="description"/>
                             <field name="inv_comment"/>
                             <field name="inv_user"/>
                             <field name="depreciation_account_id" />
                         </group>
                         <group>
                             <field name="date_invoice"/>
                             <field name="date" groups="base.group_no_one"/>

                         </group>
                    </group>
                    <footer>
                        <button string='Add Depreciation Note' name="invoice_depreciation" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_account_invoice_depreciation" model="ir.actions.act_window">
            <field name="name">Depreciation Note</field>
            <field name="res_model">account.invoice.depreciation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_account_invoice_depreciation"/>
           <field name="target">new</field>
        </record>


    </data>
</odoo>
