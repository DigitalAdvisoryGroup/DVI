<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_form_inherit_justthis" model="ir.ui.view">
            <field name="name">account.invoice.view.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="open_depreciation_wizard" type="object"
                            class="oe_highlight" string="Add Depreciation Note"
                            groups="account.group_account_invoice"
                            attrs="{'invisible': ['|',('type', '=', 'out_refund'), ('state', 'not in', ('open','in_payment','paid'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
