<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_cr" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.l10n.ch.cr</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='l10n_ch-isr_print_scanline_offset']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="l10n_ch_qr_code">
                        <div class="o_setting_left_pane">
                            <field name="l10n_ch_qr_code"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="l10n_ch_qr_code"/>
                            <div class="text-muted">
                                Print the QR code report.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
