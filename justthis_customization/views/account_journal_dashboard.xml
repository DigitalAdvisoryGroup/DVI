<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_account_moves_custom" model="ir.actions.act_window">
            <field name="context">{'journal_type':'general'}</field>
            <field name="name">Journal Items</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="account.view_move_line_tree"/>
            <field name="view_mode">list,pivot,graph,form,kanban</field>
        </record>

   <record id="action_invoice_tree_justthis" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field eval="False" name="view_id"/>
            <field name="context">{'type':'out_invoice', 'journal_type': 'sale'}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
              </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
              </p>
            </field>
        </record>

    <!-- account.journal inherit kanban view -->
    <record id="account_journal_just_this_kanban" model="ir.ui.view">
        <field name="name">account.journal.inherit.view.kanban</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <!-- Add you xpath here -->
            <xpath expr="//field[@name='kanban_dashboard']" position="after">
                <field name="is_isr_journal" />
            </xpath>
            <xpath expr="//t[@t-name='JournalBodySalePurchase']/div[hasclass('o_kanban_primary_right')]" position="inside">

                <div class="row" t-if="journal_type == 'sale'">
                    <div class="col-7">
                        <a type="object" name="open_action_justthis" context="{'action_name': 'account.action_invoice_tree1','action_type':'reversal'}">
                            <span title="Reversal Invoice"><t t-esc="dashboard.reversal_count"/> Reversal Invoice</span>
                        </a>
                    </div>
                    <div class="col-5 text-right">
                        <span><t t-esc="dashboard.reversal_count_sum"/></span>
                    </div>
                </div>

                <div class="row" t-if="journal_type == 'sale'">
                    <div class="col-7">
                        <a type="object" name="open_action_justthis" context="{'action_name': 'account.action_invoice_tree1','action_type':'depreciation'}">
                            <span title="Depreciation Invoice"><t t-esc="dashboard.depreciation_count"/> Depreciation Invoice</span>
                        </a>
                    </div>
                    <div class="col-5 text-right">
                        <span><t t-esc="dashboard.depreciation_count_sum"/></span>
                    </div>
                </div>
                <div class="row" t-if="journal_type == 'sale'">
                    <div class="col-7">
                        <a type="object" name="open_action_justthis" context="{'action_name': 'account.action_invoice_tree1','action_type':'reversed_invoice'}">
                            <span title="Reversed Invoice"><t t-esc="dashboard.reversed_invoice_count"/> Reversed Invoice</span>
                        </a>
                    </div>
                    <div class="col-5 text-right">
                        <span><t t-esc="dashboard.reversed_invoice_count_sum"/></span>
                    </div>
                </div>

                <div class="row" t-if="journal_type == 'sale'">
                    <div class="col-7">
                        <a type="object" name="open_action_justthis" context="{'action_name': 'account.action_invoice_tree1','action_type':'full_depreciation'}">
                            <span title="Fully Depreciated Invoice"><t t-esc="dashboard.fully_invoice_count"/> Fully Depreciated Invoice</span>
                        </a>
                    </div>
                    <div class="col-5 text-right">
                        <span><t t-esc="dashboard.fully_invoice_count_sum"/></span>
                    </div>
                </div>
                <div class="row" t-if="journal_type == 'sale'">
                    <div class="col-7">
                        <a type="object" name="open_action_justthis" context="{'action_name': 'account.action_invoice_tree1','action_type':'partial_depreciation'}">
                            <span title="Partial Depreciated Invoice"><t t-esc="dashboard.partial_invoice_count"/> Partial Depreciated Invoice</span>
                        </a>
                    </div>
                    <div class="col-5 text-right">
                        <span><t t-esc="dashboard.partial_invoice_count_sum"/></span>
                    </div>
                </div>
            </xpath>

            <xpath expr="//t[@t-name='JournalBodyBankCash']/div[hasclass('o_kanban_primary_right')]" position="inside">
                <div class="row">
                    <div class="col-7" t-if="record.is_isr_journal.raw_value">
                        <a type="object" name="open_action_justthis" context="{'action_name': '__import__.x_id_isr_payments','action_type':'isr_invoice'}">
                            <span title="ISR Records"><t t-esc="dashboard.isr_record_count"/> ISR Records</span>
                        </a>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- model.name inherit form view -->
        <record id="account_journal_just_this" model="ir.ui.view">
            <field name="name">account.journal.inherit.view.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='company_partner_id']" position="after">
                    <field name="is_isr_journal" />
                </xpath>
            </field>
        </record>
    

</odoo>
